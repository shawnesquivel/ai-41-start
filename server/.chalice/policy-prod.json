{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:*:*:*"
    },
    {
      "Effect": "Allow",
      "Action": ["dynamodb:Query", "dynamodb:PutItem"],
      "Resource": "arn:aws:dynamodb:us-west-2:094478197777:table/Messages"
    },
    {
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:GetObject"],
      "Resource": "arn:aws:s3:::ai41-audio-files/*"
    },
    {
      "Effect": "Allow",
      "Action": ["ssm:GetParameter"],
      "Resource": [
        "arn:aws:ssm:us-west-2:094478197777:parameter/OPENAI_API_KEY",
        "arn:aws:ssm:us-west-2:094478197777:parameter/PINECONE_API_KEY",
        "arn:aws:ssm:us-west-2:094478197777:parameter/PINECONE_INDEX"
      ]
    }
  ]
}
